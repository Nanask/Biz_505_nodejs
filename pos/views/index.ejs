<!DOCTYPE html>
<html>
  <head>
    <title>POS</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <style>
    body {
      margin: 0;
      padding: 0;
      border: none;
    }
    h1 {
      text-align: center;
    }
    div.table > div {
      margin: 50px auto;
      padding: 40%;
      border: 1px solid black;
    }
    div.table {
      display: grid;
      border: 1px soild black;
      grid-template-columns: 200px 200px 200px;
      grid-area: main;
      justify-content: space-evenly;
      /* /* align-items: center; */
      place-items: center;
      /* grid-template-columns: repeat(auto-fit, minmax(270px, 1fr)); */
      gap: 10px;
    }
  </style>
  <body>
    <h1>< 김밥나라 영업개시 ></h1>
    <div class="table">
      <div>1</div>
      <div>2</div>
      <div>3</div>
      <div>4</div>
      <div>5</div>
      <div>6</div>
      <div>7</div>
      <div>8</div>
      <div>9</div>
    </div>
  </body>
  <script>
    document.querySelector("div.table").addEventListener("click", (e) => {
      const div = e.target;

      if (div.tagName === "DIV") {
        const o_table = div.innerText;
        alert(o_table);
        document.location.href = `/order/detail?o_table=${o_table}`;
      }
    });
  </script>
</html>
